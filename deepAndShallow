/**
 * â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
 * DEEP VS SHALLOW COPYING - VISUAL DEMONSTRATION
 * 
 * This program uses a Shopping Cart example to visually show the critical
 * difference between shallow and deep copying.
 * 
 * SHALLOW COPY: Copies the object but SHARES nested objects (dangerous!)
 * DEEP COPY: Copies everything, creating independent objects (safe!)
 * â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
 */

/**
 * Product in our shopping system
 */
data class Product(
    val id: String,
    val name: String,
    var price: Double
)

/**
 * Shopping Cart containing products
 */
data class ShoppingCart(
    val customerId: String,
    val customerName: String,
    val items: MutableList<Product>  // âš ï¸ Mutable list - watch for shallow copy issues!
)

/**
 * Visual helper to draw memory diagrams
 */
fun drawMemoryDiagram(title: String, original: ShoppingCart, copy: ShoppingCart) {
    println("\nâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
    println("â•‘ $title")
    println("â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£")
    println("â•‘ STACK MEMORY          â”‚         HEAP MEMORY                â•‘")
    println("â•Ÿâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¢")
    
    // Check if items list is same reference
    val sameList = original.items === copy.items
    
    if (sameList) {
        // Shallow copy - sharing the list
        println("â•‘                       â”‚     â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”          â•‘")
        println("â•‘ original â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â–¶â”‚ ShoppingCart #1    â”‚          â•‘")
        println("â•‘                       â”‚     â”‚ items â”€â”          â”‚          â•‘")
        println("â•‘                       â”‚     â””â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜          â•‘")
        println("â•‘                       â”‚               â”‚                    â•‘")
        println("â•‘                       â”‚               â–¼                    â•‘")
        println("â•‘                       â”‚     â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”          â•‘")
        println("â•‘                       â”‚     â”‚ MutableList      â”‚          â•‘")
        println("â•‘                       â”‚     â”‚ [Product,Product]â”‚ â—€â”€SHARED!â•‘")
        println("â•‘                       â”‚     â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜          â•‘")
        println("â•‘                       â”‚               â–²                    â•‘")
        println("â•‘                       â”‚               â”‚                    â•‘")
        println("â•‘ copy â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â–¶â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”          â•‘")
        println("â•‘                       â”‚     â”‚ ShoppingCart #2    â”‚          â•‘")
        println("â•‘                       â”‚     â”‚ items â”€â”˜          â”‚          â•‘")
        println("â•‘                       â”‚     â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜          â•‘")
    } else {
        // Deep copy - separate lists
        println("â•‘                       â”‚     â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”          â•‘")
        println("â•‘ original â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â–¶â”‚ ShoppingCart #1    â”‚          â•‘")
        println("â•‘                       â”‚     â”‚ items â”€â”€â”€â”€â”€â”€â”€â”€â”   â”‚          â•‘")
        println("â•‘                       â”‚     â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”˜          â•‘")
        println("â•‘                       â”‚                      â–¼             â•‘")
        println("â•‘                       â”‚     â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”          â•‘")
        println("â•‘                       â”‚     â”‚ MutableList #1    â”‚          â•‘")
        println("â•‘                       â”‚     â”‚ [Product,Product]â”‚          â•‘")
        println("â•‘                       â”‚     â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜          â•‘")
        println("â•‘                       â”‚                                    â•‘")
        println("â•‘ copy â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â–¶â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”          â•‘")
        println("â•‘                       â”‚     â”‚ ShoppingCart #2    â”‚          â•‘")
        println("â•‘                       â”‚     â”‚ items â”€â”€â”€â”€â”€â”€â”€â”€â”   â”‚          â•‘")
        println("â•‘                       â”‚     â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”˜          â•‘")
        println("â•‘                       â”‚                      â–¼             â•‘")
        println("â•‘                       â”‚     â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”          â•‘")
        println("â•‘                       â”‚     â”‚ MutableList #2    â”‚ â—€â”€SEPARATEâ•‘")
        println("â•‘                       â”‚     â”‚ [Product,Product]â”‚          â•‘")
        println("â•‘                       â”‚     â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜          â•‘")
    }
    println("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
}

/**
 * Print cart contents with visual formatting
 */
fun printCart(label: String, cart: ShoppingCart, highlight: String = "") {
    println("\nâ”Œâ”€â”€â”€ $label â”€â”€â”€")
    println("â”‚ Customer: ${cart.customerName}")
    println("â”‚ Items (${cart.items.size}):")
    cart.items.forEach { product ->
        val marker = if (product.name == highlight) " âš ï¸ NEW!" else ""
        println("â”‚   â€¢ ${product.name}: $${String.format("%.2f", product.price)}$marker")
    }
    val total = cart.items.sumOf { it.price }
    println("â”‚ Total: $${String.format("%.2f", total)}")
    println("â””" + "â”€".repeat(50))
}

fun main() {
    println("â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
    println("â•‘        DEEP VS SHALLOW COPYING - VISUAL DEMO              â•‘")
    println("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // SETUP: Create Original Shopping Cart
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    println("\nâ•â•â• SETUP: Creating Original Shopping Cart â•â•â•")
    
    val products = mutableListOf(
        Product("P001", "Laptop", 999.99),
        Product("P002", "Mouse", 29.99),
        Product("P003", "Keyboard", 79.99)
    )
    
    val originalCart = ShoppingCart(
        customerId = "C123",
        customerName = "Alice",
        items = products
    )
    
    printCart("ORIGINAL CART", originalCart)
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // PART 1: SHALLOW COPY - The Danger!
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    println("\n\nâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    println("    PART 1: SHALLOW COPY - Sharing References (DANGEROUS!)")
    println("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    
    // Create shallow copy using data class copy()
    val shallowCopy = originalCart.copy(
        customerName = "Bob (Shallow)"
    )
    // Note: copy() only copies the reference to the items list, not the list itself!
    
    println("\nğŸ“‹ Created shallow copy for Bob")
    printCart("SHALLOW COPY", shallowCopy)
    
    // Check if they share the same list
    println("\nğŸ” MEMORY CHECK:")
    println("   originalCart.items === shallowCopy.items: ${originalCart.items === shallowCopy.items}")
    println("   âš ï¸ TRUE means they share the SAME list object!")
    
    drawMemoryDiagram("SHALLOW COPY - Shared List!", originalCart, shallowCopy)
    
    // Now modify the shallow copy's cart
    println("\nğŸ›’ Bob adds a Monitor to his cart...")
    shallowCopy.items.add(Product("P004", "Monitor", 299.99))
    
    println("\nğŸ’¥ PROBLEM: Alice's cart ALSO changed!")
    printCart("ALICE'S CART (Original)", originalCart, "Monitor")
    printCart("BOB'S CART (Shallow Copy)", shallowCopy, "Monitor")
    
    println("\nâš ï¸ SHALLOW COPY DANGER: Changes to one affect BOTH!")
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // PART 2: DEEP COPY - The Safe Way!
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    println("\n\nâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    println("    PART 2: DEEP COPY - Independent Objects (SAFE!)")
    println("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    
    // Reset original cart
    val freshProducts = mutableListOf(
        Product("P001", "Laptop", 999.99),
        Product("P002", "Mouse", 29.99),
        Product("P003", "Keyboard", 79.99)
    )
    
    val originalCart2 = ShoppingCart(
        customerId = "C456",
        customerName = "Carol",
        items = freshProducts
    )
    
    println("\nğŸ“‹ Creating DEEP copy for David")
    
    // Create DEEP copy - copy the list AND its contents
    val deepCopy = originalCart2.copy(
        customerName = "David (Deep)",
        items = originalCart2.items.map { product ->
            product.copy()  // Copy each product
        }.toMutableList()  // Create new list
    )
    
    printCart("ORIGINAL (Carol)", originalCart2)
    printCart("DEEP COPY (David)", deepCopy)
    
    // Check if they have different lists
    println("\nğŸ” MEMORY CHECK:")
    println("   originalCart2.items === deepCopy.items: ${originalCart2.items === deepCopy.items}")
    println("   âœ… FALSE means they have SEPARATE list objects!")
    
    drawMemoryDiagram("DEEP COPY - Separate Lists!", originalCart2, deepCopy)
    
    // Now modify the deep copy's cart
    println("\nğŸ›’ David adds a Webcam to his cart...")
    deepCopy.items.add(Product("P005", "Webcam", 89.99))
    
    // Also modify a product price
    println("ğŸ’° David gets a discount on the Laptop...")
    deepCopy.items[0].price = 899.99  // $100 discount
    
    println("\nâœ… SUCCESS: Carol's cart is UNCHANGED!")
    printCart("CAROL'S CART (Original)", originalCart2)
    printCart("DAVID'S CART (Deep Copy)", deepCopy, "Webcam")
    
    println("\nâœ… DEEP COPY SUCCESS: Changes are independent!")
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // PART 3: SIDE-BY-SIDE COMPARISON
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    println("\n\nâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    println("    PART 3: SIDE-BY-SIDE COMPARISON")
    println("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    
    println("""
    â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
    â”‚     SHALLOW COPY        â”‚       DEEP COPY         â”‚
    â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤
    â”‚ cart1.copy()            â”‚ cart1.copy(             â”‚
    â”‚                         â”‚   items = items.map {   â”‚
    â”‚                         â”‚     it.copy()           â”‚
    â”‚                         â”‚   }.toMutableList()     â”‚
    â”‚                         â”‚ )                       â”‚
    â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¼â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤
    â”‚ âŒ Shares nested objectsâ”‚ âœ… Independent objects   â”‚
    â”‚ âŒ Changes affect both  â”‚ âœ… Changes are isolated  â”‚
    â”‚ âŒ Dangerous bugs       â”‚ âœ… Safe to modify        â”‚
    â”‚ âš¡ Faster (less copying)â”‚ ğŸ¢ Slower (more copying) â”‚
    â”‚ ğŸ’¾ Less memory used     â”‚ ğŸ’¾ More memory used      â”‚
    â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜
    """.trimIndent())
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // PART 4: PRACTICAL EXAMPLE - Save & Restore
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    println("\n\nâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    println("    PART 4: PRACTICAL USE CASE - Save & Restore Cart")
    println("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
    
    val workingCart = ShoppingCart(
        customerId = "C789",
        customerName = "Eve",
        items = mutableListOf(
            Product("P010", "Book", 19.99),
            Product("P011", "Pen", 2.99)
        )
    )
    
    println("\nğŸ“¸ Saving cart state before experiments...")
    
    // WRONG WAY - Shallow "backup"
    val shallowBackup = workingCart.copy()
    
    // RIGHT WAY - Deep backup
    val deepBackup = workingCart.copy(
        items = workingCart.items.map { it.copy() }.toMutableList()
    )
    
    printCart("WORKING CART (Before)", workingCart)
    
    println("\nğŸ§ª Experimenting: Adding expensive items...")
    workingCart.items.add(Product("P012", "Diamond Ring", 5000.00))
    workingCart.items.add(Product("P013", "Gold Watch", 3000.00))
    
    printCart("WORKING CART (After Experiment)", workingCart)
    
    println("\nğŸ”„ Attempting to restore from shallow backup...")
    println("   Shallow backup has ${shallowBackup.items.size} items")
    println("   âŒ FAILED! Shallow backup also has the expensive items!")
    
    println("\nğŸ”„ Restoring from deep backup...")
    println("   Deep backup has ${deepBackup.items.size} items")
    println("   âœ… SUCCESS! Deep backup preserved original state!")
    
    printCart("SHALLOW BACKUP (Corrupted)", shallowBackup)
    printCart("DEEP BACKUP (Preserved)", deepBackup)
    
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // SUMMARY
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    println("\nâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
    println("â•‘                      KEY TAKEAWAYS                        â•‘")
    println("â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£")
    println("â•‘                                                            â•‘")
    println("â•‘  SHALLOW COPY:                                            â•‘")
    println("â•‘  â€¢ Uses: originalCart.copy()                              â•‘")
    println("â•‘  â€¢ Copies: Top-level properties only                      â•‘")
    println("â•‘  â€¢ Nested objects: SHARED (same reference)                â•‘")
    println("â•‘  â€¢ Result: Changes to nested objects affect BOTH!         â•‘")
    println("â•‘  â€¢ When to use: When you WANT to share data               â•‘")
    println("â•‘                                                            â•‘")
    println("â•‘  DEEP COPY:                                               â•‘")
    println("â•‘  â€¢ Uses: Manual copying of nested objects                 â•‘")
    println("â•‘  â€¢ Copies: Everything, creating new objects               â•‘")
    println("â•‘  â€¢ Nested objects: INDEPENDENT (new instances)            â•‘")
    println("â•‘  â€¢ Result: Changes are completely isolated                â•‘")
    println("â•‘  â€¢ When to use: When you need TRUE independence           â•‘")
    println("â•‘                                                            â•‘")
    println("â•‘  REMEMBER:                                                â•‘")
    println("â•‘  data class copy() = SHALLOW COPY                         â•‘")
    println("â•‘  For deep copy, you must manually copy nested objects!    â•‘")
    println("â•‘                                                            â•‘")
    println("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
}
